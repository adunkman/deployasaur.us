#header
  background-gradient: #E52E56 #DF0030;
  border-top: 1px solid #EE7F96;
  border-bottom: 1px solid #9E1230;
  padding: 10px 0;
  margin-bottom: 2em;

  text()
    color: #FEF7F9;
    text-shadow: 0 1px 0 #9E1230;
    text-decoration: none;

    &:hover
      color: #fff;
      text-shadow: 0 1px 0 #000;

  h1
    margin: 0;
    font-size: 20px;

    a
      text()

  .user
    text()
    sans-serif()
    display: block;
    padding: 5px 0;
    font-size: 14px;
    float: right;