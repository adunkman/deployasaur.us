extends ../layout

block prepend title
  | edit deployment script for #{deploy.repo} #{deploy.branch} â€”

block body
  h1 Edit deployment script
    p For #{deploy.repo} #{deploy.branch}

  ul.error
    each message in error
      li= message

  form(id="deploy_form", method="post", action="/" + deploy.repo + "/" + deploy.branch + "/edit")
    p When all tests successfully finish for repository <em>#{deploy.repo}</em>, branch <em>#{deploy.branch}</em>, <label for="script">run this script:</label>

    .textarea-container
      textarea(name="script", id="script", class=error.script && 'error')= deploy.script

    button(type="submit") Save script